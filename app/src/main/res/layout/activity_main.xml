<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shubham.pig.MainActivity">


    <TextView
        android:text="@string/score_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPlayer_1"
        android:layout_marginTop="16dp"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="@string/score_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPlayer_2"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewPlayer_1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlayer_1" />

    <Button
        android:text="@string/hold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_hold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="@string/roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_roll"
        app:layout_constraintBottom_toBottomOf="@+id/button_hold"
        app:layout_constraintTop_toTopOf="@+id/button_hold"
        android:layout_marginStart="35dp"
        app:layout_constraintLeft_toRightOf="@+id/button_hold" />

    <TextView
        tools:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/textViewScore1"
        app:layout_constraintLeft_toRightOf="@+id/textViewPlayer_1"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPlayer_1"
        app:layout_constraintTop_toTopOf="@+id/textViewPlayer_1"
        app:layout_constraintVertical_bias="0.37"
        android:layout_marginStart="8dp" />
    <TextView
        tools:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/textViewScore2"
        app:layout_constraintLeft_toRightOf="@+id/textViewPlayer_2"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPlayer_2"
        app:layout_constraintTop_toTopOf="@+id/textViewPlayer_2"
        app:layout_constraintVertical_bias="0.37"
        android:layout_marginStart="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dice3droll"
        android:id="@+id/imagedice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
